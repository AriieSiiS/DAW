@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    List<Frases> fraces = ViewBag.Frases;
    ViewData["Title"] = "Users";
    int contador;
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Ejemplos aportados</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in UserManager.Users)
        {
            contador = fraces.FindAll(m => m.UserId == user.UserName).Count();
            var roles = UserManager.GetRolesAsync(user).Result;
            var rolesString = string.Join(", ", roles);
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@rolesString</td>
                <td>@contador</td>
            </tr>
        }
    </tbody>
</table>