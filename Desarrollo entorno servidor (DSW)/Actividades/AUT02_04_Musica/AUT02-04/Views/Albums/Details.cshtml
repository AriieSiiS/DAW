@model AUT02_04.Models.Album

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles del Album</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <dt class="col-sm-2">
            Listado de canciones:
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var track in Model.Tracks)
                {
                    <li>@track.Name</li>
                }
            </ul>

        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.AlbumId">Editar</a>
    <a class="btn btn-primary" asp-action="Index">Volver</a>
</div>
